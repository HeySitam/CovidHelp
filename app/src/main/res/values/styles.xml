<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CityCardViewStyle">
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="strokeColor">@color/color_border_teal</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="CityCircularImageStyle">
        <item name="android:layout_gravity">center</item>
        <item name="civ_border">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="civ_border_color">@color/city_icon_black</item>
        <item name="civ_border_width">1.5dp</item>
    </style>

    <style name="CityTextTitleStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">#003d33</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>