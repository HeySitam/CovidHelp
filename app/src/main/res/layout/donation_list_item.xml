<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="10dp"
    app:strokeWidth="1dp"
    app:strokeColor="@android:color/darker_gray"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/custom_background"
        android:layout_height="match_parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imgDonate"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            app:civ_border="true"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/txtOrgName"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgDonate"
            android:layout_centerHorizontal="true"
            android:text="@string/hemkunt_foundation"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llOrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtOrgName"
            android:layout_marginTop="5dp">

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_gravity="start"
                android:layout_weight="1.5"
                android:background="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_weight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_gravity="end"
                android:layout_weight="1.5"
                android:background="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtOrgDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/llOrg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/hemkunt_foundation"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

        <LinearLayout
            android:id="@+id/llOrgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtOrgDetail"
            android:layout_marginTop="8dp">

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_gravity="start"
                android:layout_weight="1.5"
                android:background="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_weight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_gravity="end"
                android:layout_weight="1.5"
                android:background="@color/black" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDonate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/donate"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@color/white"
            app:cornerRadius="8dp" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
