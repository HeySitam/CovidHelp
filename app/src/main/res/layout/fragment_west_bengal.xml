<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.WestBengalFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cvWB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:strokeWidth="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_background">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/imgDonate"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/biswa_bangla"
                            app:civ_border="true"
                            app:civ_border_color="@color/black"
                            app:civ_border_width="2dp" />

                        <TextView
                            android:id="@+id/txtOrgName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgDonate"
                            android:layout_centerHorizontal="true"
                            android:text="WB-ICMS"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/llBedAvailable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtOrgName"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bed Available : "
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtAvailBed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25259"
                                android:textColor="#005005"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llOrg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/llBedAvailable"
                            android:layout_marginTop="5dp">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_gravity="start"
                                android:layout_weight="1.5"
                                android:background="@color/black" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_weight="1" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_gravity="end"
                                android:layout_weight="1.5"
                                android:background="@color/black" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtOrgDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llOrg"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="5dp"
                            android:text="@string/wb_gov_help"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                        <LinearLayout
                            android:id="@+id/llOrgs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtOrgDetail"
                            android:layout_marginTop="8dp">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_gravity="start"
                                android:layout_weight="1.5"
                                android:background="@color/black" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_weight="1" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_gravity="end"
                                android:layout_weight="1.5"
                                android:background="@color/black" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEServce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llOrgs"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="E-SERVICES"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:cornerRadius="8dp" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
