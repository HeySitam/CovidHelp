                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:strokeWidth="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_background">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/imgDonate1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/somonnoyi_logo"
                            app:civ_border="true"
                            app:civ_border_color="@color/black"
                            app:civ_border_width="2dp" />

                        <TextView
                            android:id="@+id/txtOrgName1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgDonate1"
                            android:layout_centerHorizontal="true"
                            android:text="Someannoying"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/llBedAvailable1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtOrgName1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/help" />

                            <TextView
                                android:id="@+id/txtAskHelp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="5dp"
                                android:background="?attr/selectableItemBackground"
                                android:clickable="true"
                                android:elevation="5dp"
                                android:focusable="true"
                                android:text="Ask for Help"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llOrg1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/llBedAvailable1"
                            android:layout_marginTop="5dp">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_gravity="start"
                                android:layout_weight="1.5"
                                android:background="@color/black" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_weight="1" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_gravity="end"
                                android:layout_weight="1.5"
                                android:background="@color/black" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtOrgDetail1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llOrg1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="5dp"
                            android:text="@string/someannoying_help"
                            android:textAlignment="center"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                        <LinearLayout
                            android:id="@+id/llOrgs1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtOrgDetail1"
                            android:layout_marginTop="8dp">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_gravity="start"
                                android:layout_weight="1.5"
                                android:background="@color/black" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_weight="1" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0.1dp"
                                android:layout_gravity="end"
                                android:layout_weight="1.5"
                                android:background="@color/black" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnResources"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llOrgs1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="RESOURCES"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            app:cornerRadius="8dp" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
