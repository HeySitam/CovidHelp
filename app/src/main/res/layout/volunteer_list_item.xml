<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="7.5dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="7.5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp"
    app:strokeColor="@color/black"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_card"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/llVolDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/llBtnSet"
            android:layout_marginEnd="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNameVol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="25sp"
                tools:text="Sitam Sardar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtStateVol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    tools:text="West Bengal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDistrictVol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    tools:text="Kolkata" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/phone" />

                <TextView
                    android:id="@+id/txtPhVol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="9062717912" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/organization" />

                <TextView
                    android:id="@+id/txtOrgVol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="Covid Help" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llBtnSet"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/llOrg"
            android:layout_alignParentEnd="true">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnVolCall"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                android:backgroundTint="#f5f5f5"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_local_phone_24"
                    android:scaleType="fitCenter"/>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnVolMessage"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                android:backgroundTint="#f5f5f5"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_message_24"
                    android:scaleType="fitCenter"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llOrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llVolDetails"
            android:layout_marginTop="5dp">

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_gravity="start"
                android:layout_weight="1.5"
                android:background="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_weight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_gravity="end"
                android:layout_weight="1.5"
                android:background="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtVolDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/llOrg"
            android:textStyle="bold"
            android:text="I want to help" />

        <LinearLayout
            android:id="@+id/llOrg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/txtVolDesc"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_gravity="start"
                android:layout_weight="1.5"
                android:background="@color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_weight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_gravity="end"
                android:layout_weight="1.5"
                android:background="@color/black" />
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>